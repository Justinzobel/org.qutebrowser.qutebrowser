{
    "name": "asciidoc",
    "buildsystem": "simple",
    "build-commands": [
        "python setup.py build",
        "python setup.py install --prefix=/app --root=/ --optimize=1",
        "_pyver=$(python -c 'import sys; print(\"%s.%s\" %sys.version_info[0:2])'); install asciidoc/resources/docbook-xsl/*.xsl -t ${FLATPAK_DEST}/lib/python${_pyver}/site-packages/asciidoc/resources/docbook-xsl"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/asciidoc-py/asciidoc-py/archive/10.0.2/asciidoc-10.0.2.tar.gz",
            "sha256": "d4648762f36de0cfbf5dd4194996fb70a4cb1607f90a6d0fa84ae505377a214b"
        }
    ],
    "cleanup": [
        "*"
    ]
}