{
    "name": "asciidoc",
    "buildsystem": "simple",
    "build-commands": [
        "python setup.py build",
        "python setup.py install --prefix=/app --root=/ --optimize=1",
        "_pyver=$(python -c 'import sys; print(\"%s.%s\" %sys.version_info[0:2])'); install asciidoc/resources/docbook-xsl/*.xsl -t ${FLATPAK_DEST}/lib/python${_pyver}/site-packages/asciidoc/resources/docbook-xsl"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/asciidoc-py/asciidoc-py/archive/10.1.3/asciidoc-10.1.3.tar.gz",
            "sha256": "9aae9d37d01066d6281aa8eebd9c2ae288c60827f07024d7552e6f2d840267c6"
        }
    ],
    "cleanup": [
        "*"
    ]
}