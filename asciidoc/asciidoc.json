{
    "name": "asciidoc",
    "buildsystem": "simple",
    "build-commands": [
        "python setup.py build",
        "python setup.py install --prefix=/app --root=/ --optimize=1",
        "_pyver=$(python -c 'import sys; print(\"%s.%s\" %sys.version_info[0:2])'); install asciidoc/resources/docbook-xsl/*.xsl -t ${FLATPAK_DEST}/lib/python${_pyver}/site-packages/asciidoc/resources/docbook-xsl"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/asciidoc-py/asciidoc-py/archive/10.1.4/asciidoc-10.1.4.tar.gz",
            "sha256": "f70c0e833a0108c7bd5f6601212e27b0f072fe358858169bc93d2ada9d9512e5"
        }
    ],
    "cleanup": [
        "*"
    ]
}