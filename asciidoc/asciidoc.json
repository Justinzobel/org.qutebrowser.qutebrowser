{
    "name": "asciidoc",
    "buildsystem": "simple",
    "build-commands": [
        "python setup.py build",
        "python setup.py install --prefix=/app --root=/ --optimize=1",
        "_pyver=$(python -c 'import sys; print(\"%s.%s\" %sys.version_info[0:2])'); install asciidoc/resources/docbook-xsl/*.xsl -t ${FLATPAK_DEST}/lib/python${_pyver}/site-packages/asciidoc/resources/docbook-xsl"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/asciidoc-py/asciidoc-py/archive/10.0.0/asciidoc-10.0.0.tar.gz",
            "sha256": "9a0007de3bc2142e691706b2dbc729dc5958a3290478cf1ffec7cf33d396cb92"
        }
    ],
    "cleanup": [
        "*"
    ]
}