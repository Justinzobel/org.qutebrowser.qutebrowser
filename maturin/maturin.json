{
    "name": "maturin",
    "buildsystem": "simple",
    "build-commands": [
        "eval ${CARGO_VARS} cargo fetch",
        "eval ${CARGO_VARS} cargo build --release",
        "install -Dm755 target/release/maturin -t ${FLATPAK_DEST}/bin/",
        "install -Dm644 maturin/__init__.py -t ${FLATPAK_DEST}/lib/python/site-packages/maturin/"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/PyO3/maturin/archive/v0.12.11.tar.gz",
            "sha256": "4d39f15fae9c01f2f23a544fc26b20c68693ec03f820b30ca5f505647c452be1"
        },
        "cargo-sources.json",
        {
            "type": "file",
            "dest": ".cargo",
            "dest-filename": "config",
            "path": "cargo-config"
        }
    ],
    "cleanup": [
        "*"
    ]
}
